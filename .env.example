# ─── Database ──────────────────────────────────────────────────────────────────
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/invoice_ai

# ─── AI / LLM ─────────────────────────────────────────────────────────────────
# Anthropic API key for Claude 3.5 Sonnet Vision
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ─── Server ────────────────────────────────────────────────────────────────────
# Port for the Express server (default: 3001)
PORT=3001

# Node environment: development | production
NODE_ENV=development

# Session secret for express-session (generate a random 64-char string)
SESSION_SECRET=your-session-secret-here-change-me-in-production

# CORS origin (set to your Railway public URL in production, e.g. https://your-app.up.railway.app)
CORS_ORIGIN=http://localhost:5173

# ─── Client ────────────────────────────────────────────────────────────────────
# Vite dev server port (default: 5173)
VITE_PORT=5173

# API base URL used by the client (should point to the Express server)
VITE_API_URL=http://localhost:3001/api

# ─── File Uploads ──────────────────────────────────────────────────────────────
# Max upload file size in bytes (default: 20MB)
MAX_FILE_SIZE=20971520

# Upload directory path (relative to project root)
UPLOAD_DIR=./uploads/invoices
